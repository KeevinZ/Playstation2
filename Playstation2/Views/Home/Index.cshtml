@model Playstation.ViewModels.HomeVM
@{
    ViewData["Title"] = "Home";
}

<div class="pt-5 container">
    <div class="row">
        <div class="col mx-auto text-center">
            <h1 class="display-4 text-white">Playstation 2</h1>
            <div class="my-3">
                <button id="btn-all" class="btn btn-md my-2 text-white bg-secondary btn-filter">Ver
                    Todos
                </button>
                
                @foreach (Genero Genero in Model.Genero)
                {
                    <button id="btn-@Genero.Nome" class="btn btn-sm my-2 text-white btn-filter"
                        style="background-color:(black)">
                        @Genero.Nome
                    </button>
                }

            </div>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">

        @foreach (Jogo Jogo in Model.Jogo)
{
    <div class="col @string.Join(' ', Jogo.Genero.Select(g => g.Genero.Nome))">
        <a asp-action="Details" asp-route-id="@Jogo.Numero" class="text-decoration-none">
            <div class="card" style="background-color: blue;">
                <img src="@Jogo.Imagem" class="card-img-top" alt="@Jogo.Nome" />
                <div class="card-body">
                    <h5 class="card-text mb-1 text-white">NÂº @Jogo.Numero.ToString("00")</h5>
                    <h3 class="card-title text-dark">@Jogo.Nome</h3>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex gap-2 my-2">
                            @foreach (JogoGenero genero in Jogo.Genero)
                            {
                                <a href="#" class="btn text-white" style="background-color: white;">@genero.Genero.Nome</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
}



        <div id="zeroJogo" class="col-lg-12 text-center" hidden>
            <h1 class="my-3 text-danger">Nenhum Jogo Encontrado</h1>
        </div>
    </div>

</div>